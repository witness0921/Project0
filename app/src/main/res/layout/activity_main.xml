<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.witness.myapplication.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="纳米学位应用"
        android:textSize="24dp"
        android:layout_marginTop="48sp"
        android:layout_marginBottom="24sp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_movies"
        android:theme="@style/AppTheme.Button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/movies"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center_horizontal"
        android:onClick="btnClick"/>

    <Button
        android:id="@+id/btn_stock"
        android:theme="@style/AppTheme.Button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/stock"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center_horizontal"
        android:onClick="btnClick"/>

    <Button
        android:id="@+id/btn_browser"
        android:theme="@style/AppTheme.Button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:onClick="btnClick"
        android:text="@string/browser" />

    <Button
        android:id="@+id/btn_news"
        android:theme="@style/AppTheme.Button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/news"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center_horizontal"
        android:onClick="btnClick"/>

    <Button
        android:id="@+id/btn_graduationProject"
        android:theme="@style/AppTheme.Button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/graduationProject"
        android:textColor="#FFFFFF"
        android:background="#2E3D49"
        android:layout_gravity="center_horizontal"
        android:onClick="btnClick"/>
</LinearLayout>
